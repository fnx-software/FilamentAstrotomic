{
    "name": "fnx-software/filamentastrotomic",
    "description": "Filament support for Astrotomic's Laravel Translatable package.",
    "keywords": [
        "FenixSoftware",
        "fnx-software",
        "laravel",
        "filament-astrotomic",
        "astrotomic",
        "laravel-translatable",
        "filament",
        "translatable",
        "translations",
        "filamentastrotomic"
    ],
    "homepage": "https://github.com/fnx-software/filamentastrotomic",
    "support": {
        "issues": "https://github.com/fnx-software/filamentastrotomic/issues",
        "source": "https://github.com/fnx-software/filamentastrotomic"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Moustafa Khazaal",
            "email": "mstfkhazaal@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "astrotomic/laravel-translatable": "^11.16",
        "filament/filament": "^3.0",
        "spatie/laravel-package-tools": "^1.15.0",
        "ext-intl": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.1",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Fnxsoftware\\FilamentAstrotomic\\": "src/",
            "Fnxsoftware\\FilamentAstrotomic\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fnxsoftware\\FilamentAstrotomic\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fnxsoftware\\FilamentAstrotomic\\FilamentAstrotomicServiceProvider"
            ],
            "aliases": {
                "FilamentAstrotomic": "Fnxsoftware\\FilamentAstrotomic\\Facades\\FilamentAstrotomic"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
